<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0" metadata-complete="true">

    <servlet>
        <servlet-name>restx</servlet-name>
        <servlet-class>restx.servlet.RestxMainRouterServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>restx</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PhotoBoothWebSocketServlet</servlet-name>
        <servlet-class>org.teutinc.pi.photobooth.websocket.PhotoBoothWebSocketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhotoBoothWebSocketServlet</servlet-name>
        <url-pattern>/ws/*</url-pattern>
    </servlet-mapping>

